{% include 'partials/_head.njk' %}

<body class="{{ bodyClass }}[ article ][ default-template ][ grid ]">

   <a href="#content" class="skip-link">Skip to content</a>

   <aside class="sidebar">
      
      <header class="page-header">
         {% include 'partials/_header.njk' %}
      </header>

      {% include 'partials/_footer.njk' %}
   </aside>

   <main id="content" tabindex="-1">

      <article class="[ post ][ flow section ]">
         <header class="[ article__header ][ section flow bg-primary-color ]">
            <div class="[ container ][ grid twelve ]">
               <h1 fetchpriority=high>{{ title }}</h1>
               <h2>{{ subtitle }}</h2>
               <p class="primary-msg">{{ primary_msg }}</p>
            </div>
         </header>

         <div class="[ section ]">
            <div class="[ article__content ][ container ][ grid twelve flow ]">
               {{ content | safe }}
            </div>
         </div>

      </article>

      <nav aria-label="secondary" class="footer-nav grid twelve">
         <ul class="l-rs">
            <li><strong>Previous</strong><br>
               <a href="{{ previousUrl }}">« {{ previousUrlText }}</a>
            </li>
            <li>
               <div>Page</div>
               {{ pageNumber }} / 8
            </li>
            <li><strong>Next</strong><br>
               <a href="{{ nextUrl }}">{{ nextUrlText }} »</a>
            </li>
         </ul>
      </nav>

   </main>

   {% include 'partials/_footer.njk' %}

 <script 
 async="" 
 defer="">

		 $('#hamburger').click(function(){
		   $('.main-nav').toggleClass('active');
		   $('body').toggleClass('nav-is-open');
		   var x = document.getElementById("hamburger").getAttribute("aria-expanded"); 
			  if (x == "true") 
			  {
			  x = "false"
			  } else {
			  x = "true"
			  }
			  document.getElementById("hamburger").setAttribute("aria-expanded", x);
		 });
		
	 </script>

    <script 
 defer="">
  if (window.netlifyIdentity) {
    window.netlifyIdentity.on("init", user => {
      if (!user) {
        window.netlifyIdentity.on("login", () => {
          document.location.href = "/admin/";
        });
      }
    });
  }
</script>

</body>
</html>
